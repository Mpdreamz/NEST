<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>NEST</PackageId>
    <Title>NEST - Elasticsearch .NET high level client</Title>
    <PackageTags>elasticsearch;elastic;search;lucene;nest</PackageTags>
    <Description>
      Strongly typed interface to Elasticsearch. Fluent and classic object initializer mappings of requests and 
      responses. Uses and exposes Elasticsearch.Net.
    </Description>
  </PropertyGroup>
  
  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Elasticsearch.Net\Elasticsearch.Net.csproj" />
  </ItemGroup>
  <ItemGroup>
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.CustomDynamicObjectResolver" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicCompositeResolver" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullFalseNameMutateOriginal" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullFalseNameMutateCamelCase" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullFalseNameMutateSnakeCase" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullTrueNameMutateOriginal" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullTrueNameMutateCamelCase" />
    <InternalsVisibleTo Include="Elastic.Transport.Utf8Json.DynamicObjectResolverAllowPrivateFalseExcludeNullTrueNameMutateSnakeCase" />
  </ItemGroup>
  <ItemGroup>
    <!-- TODO uncomment this when we do not need to use InternalsVisibleTo for UTF8 anymore -->
    <Compile Include="..\Elastic.SharedExtensions\*.cs">
      <Link>Extensions\*.cs</Link>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Requests.*.cs">
      <AutoGen>True</AutoGen>
      <DependentUpon>Requests.cs</DependentUpon>
    </Compile>
    <Compile Update="Descriptors.*.cs">
      <AutoGen>True</AutoGen>
      <DependentUpon>Descriptors.cs</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="ElasticClient.*.cs">
      <AutoGen>True</AutoGen>
      <DependentUpon>ElasticClient.cs</DependentUpon>
    </Compile>
  </ItemGroup>
</Project>