{
  "elasticsearchprojects": {
    "properties": {
      "suggest.suffix": {
        "type": "completion",
        "index_analyzer": "simple",
        "search_analyzer": "simple",
        "payloads": true,
        "max_input_len": 25,
        "context": {
          "color": {
            "type": "category",
            "path": "color_field",
            "default": [ "red", "green", "blue" ]
          },
          "location": {
            "type": "geo",
            "precision": [ "5m" ],
            "neighbors": true,
            "default": "u33"
          }
        }
      }
    }
  }
}
